<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/d05"
    android:background="@color/default_black_bg">

    <View
        android:id="@+id/iv_music_cover"
        android:layout_width="@dimen/d50"
        android:layout_height="@dimen/d50"
        android:background="@color/default_black_bg"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/iv_pause"
        android:layout_width="@dimen/d20"
        android:layout_height="@dimen/d20"
        android:background="@color/default_black_bg"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/iv_music_cover"
        app:layout_constraintEnd_toEndOf="@id/iv_music_cover"
        app:layout_constraintStart_toStartOf="@+id/iv_music_cover"
        app:layout_constraintTop_toTopOf="@id/iv_music_cover" />

    <View
        android:id="@+id/tv_music_item_name"
        android:layout_width="@dimen/d105"
        android:layout_height="@dimen/d20"
        android:layout_marginStart="@dimen/d10"
        android:background="@color/default_black_bg"
        android:textSize="@dimen/d15"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_music_cover"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="10000" />

    <View
        android:id="@+id/tv_music_item_author"
        android:layout_width="@dimen/d50"
        android:layout_height="@dimen/d12"
        android:layout_marginStart="@dimen/d10"
        android:layout_marginTop="3dp"
        android:background="@color/default_black_bg"
        app:layout_constraintStart_toEndOf="@+id/iv_music_cover"
        app:layout_constraintTop_toBottomOf="@+id/tv_music_item_name" />

    <View
        android:id="@+id/tv_music_duration"
        android:layout_width="@dimen/d50"
        android:layout_height="@dimen/d12"
        android:layout_marginStart="@dimen/d10"
        android:background="@color/default_black_bg"
        app:layout_constraintBottom_toBottomOf="@+id/iv_music_cover"
        app:layout_constraintStart_toEndOf="@+id/iv_music_cover" />

    <View
        android:id="@+id/tv_use"
        android:layout_width="@dimen/d40"
        android:layout_height="@dimen/d20"
        android:layout_marginEnd="@dimen/d10"
        android:background="@color/default_black_bg"
        app:layout_constraintBottom_toBottomOf="@+id/iv_music_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_music_cover" />


</androidx.constraintlayout.widget.ConstraintLayout>